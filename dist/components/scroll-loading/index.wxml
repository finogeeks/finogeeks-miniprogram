<block wx:if="{{$taroCompReady}}">
    <view class="{{rootClass}}">
        <block wx:if="{{loading}}">
            <view class="loading">
                <button class="loading-btn" plain="{{true}}" loading="{{true}}">{{loadingText}}</button>
            </view>
        </block>
        <block wx:if="{{!loading && !hasMore}}">
            <view class="no-more">{{noMoreText}}</view>
        </block>
    </view>
</block>