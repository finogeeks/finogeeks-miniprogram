<block wx:if="{{$taroCompReady}}">
    <view class="convo-header">
        <view class="title">
            <block wx:if="{{icon}}">
                <image class="icon" mode="aspectFill" src="{{icon}}"></image>
            </block><text>{{title}}</text>
        </view>
        <block wx:if="{{date}}">
            <view class="time">{{date}}</view>
        </block>
    </view>
</block>